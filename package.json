{
  "name": "midnightcodex",
  "description": "A custom Ghost theme of Hasan Hüseyin Özgür for learning and showcasing Ghost development",
  "version": "0.1.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "author": {
    "name": "Hasan Hüseyin Özgür",
    "email": "hasanhuseyinozgur@outlook.com.tr"
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "zip": "gulp zip",
    "test": "gscan ."
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "beeper": "^2.1.0",
    "cssnano": "^6.1.2",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^10.0.0",
    "gulp-zip": "^5.1.0",
    "postcss": "^8.4.47",
    "pump": "^3.0.2"
},
  "config": {
    "posts_per_page": 1,
    "custom": {
      "background_type": {
        "type": "select",
        "options": ["Image", "Color"],
        "default": "Image",
        "description": "Choose between image or solid color background"
      },
      "background_image": {
        "type": "image",
        "description": "Background image (recommended: 1920x1080px or larger and under 1MB)",
        "default": "https://images.unsplash.com/photo-1579546929518-9e396f3cc809"
      },
      "background_color": {
        "type": "color",
        "default": "#1a1a1a",
        "description": "Background color (used as fallback for images or as primary background)"
      },
      "background_position": {
        "type": "select",
        "options": ["Center", "Top", "Bottom", "Left", "Right", "Top Left", "Top Right", "Bottom Left", "Bottom Right"],
        "default": "Center",
        "description": "Image focal point when cropped"
      },
      "background_overlay_opacity": {
        "type": "select",
        "options": ["0.3", "0.4", "0.5", "0.6", "0.7", "0.8", "0.9"],
        "default": "0.7",
        "description": "Overlay darkness (higher = darker, better readability)"
      },
      "show_background_on_mobile": {
        "type": "boolean",
        "default": true,
        "description": "Display background image on mobile devices (disable to improve mobile performance)"
      }
    }
  }
}